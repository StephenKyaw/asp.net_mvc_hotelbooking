@model IEnumerable<Room>
@{
    ViewData["Title"] = "Panda Hotels";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>



            <div class="card-body">
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                    </div>
                    <small class="text-muted">9 mins</small>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null)
    {
        foreach (var item in Model)
        {

            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    @*<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>*@

                    <img src="@Url.Content("~/Images/Rooms/" + item.RoomPhotos.FirstOrDefault().FileName)"
                 width="100%" height="225" class="img-thumbnail bd-placeholder-img card-img-top" alt="...">

                    <div class="card-body">
                        <strong class="card-title">@item.Hotel.Name / RoomType (@item.RoomType.RoomTypeName)</strong>
                        <div class="d-flex justify-content-between align-items-center">
                            @if(item.RoomFacilities.Count() > 0)
                            {
                               <ul>
                                @foreach(var facility in item.RoomFacilities)
                                {
                                    <li>@facility.FacilityType</li>
                                }
                               </ul>
                            }
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <button type="button" class="btn btn-sm btn-outline-secondary">Add To Cart</button>
                            <small class="text-capitalize">@item.Price USD</small>
                        </div>
                    </div>
                </div>
            </div>

        }
    }
